{% extends 'base.html.twig' %}

{% block title %}Accueil | Ohmyblog{% endblock %}


{% block body %}


{%include "/template_part/navBar.html.twig" %}

<div class="recettes">
{% for recette in recettes %}

<a href="{{ path("app_recetteById", {id: recette.id}) }}" class="recette">
    <img class="recettePhoto" src="{{ recette.photo }}" alt="photo recette {{ recette.nom }}" />

<div class="recetteText">
    <p class="recetteTitle">{{ recette.nom }}</p>
    
    <p class="recetteCategorie">{{ recette.categorie.nom }}</p>
</div>

</a>

    {% endfor %}
</div>



{% endblock %}
