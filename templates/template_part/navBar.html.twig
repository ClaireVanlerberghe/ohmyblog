{# Si utilisateur connecté #}

<div class="user">
	{% if app.user %}
		{% if app.user.photo is same as null %}
			<div><img class="avatar" src="https://i.ibb.co/swJLbmk/user.png" alt="Icône de profil"/>
			</div>
			{% else %}<img class="photoProfil" src="{{app.user.photo}}" alt="photo de profil utilisateur"/>
		{% endif %}


		<p class="userName">{{app.user.nom}}
			{{app.user.prenom}}</p>

		<div class="userDeco">
			<a class="userDecoLink" href="{{ path('app_logout') }}">Deconnexion</a>
		</div>
	{% endif %}
</div>



{# Si utilisateur non connecté #}

{% if not app.user %}
<div class="authButton">
	<a class="connexionButton" href="{{ path('app_login')}}">Connexion</a>
	<button><a class="inscriptionButton" href="{{ path('app_register')}}">Inscription</a></button>
	</div>
{% endif %}
